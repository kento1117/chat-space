.chat_main     
  .chat_main__group_info
    .chat_main__group_info__name
      = @group.name
      .chat_main__group_info__name__member
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group), class: "chat_main__group_info__btn" do
      = "Edit"    
  .chat_main__message_list
    = render @messages
    .chat_main__message_list__group
      .chat_main__message_list__user-name
        
      .chat_main__message_list__time
      
    .chat_main__message_list__user-massage
      
    .chat_main__message_list__group2
      .chat_main__message_list__user-name2
      
      .chat_main__message_list__time2
      
    .chat_main__message_list__user-massage2
      
  .chat_main__message_form
    = form_for [@group, @message], haml: {class: "chat_main__message_form__group" } do |f|
      = f.text_field :content, class: "chat_main__message_form__group__text_area", placeholder: 'type a message'
      .chat_main__message_form__group__masuku
        -# type a message
        = f.label:image,  class: "chat_main__message_form__group__masuku__imagebtn" do
          = icon('fas', 'images', class: 'icon')
          = f.file_field :image, class: 'hidden'
      -# = link_to "Send", "#", class: "chat_main__message_form__group__btn"
      = f.submit 'Send' , class: "chat_main__message_form__group__sendbtn"
